<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thiman.android.miwok2.MainActivity">

    <TextView
        android:id="@+id/numbers"
        android:text="@string/numbers"
        style="@style/CategoryStyle"
        android:background="@color/category_numbers"
        android:onClick="numberList"
         />

    <TextView
        android:id="@+id/family"
        android:text="@string/family_members"
        style="@style/CategoryStyle"
        android:background="@color/category_family"
        android:onClick="familyList"
        />

    <TextView
        android:id="@+id/colors"
        android:text="@string/colors"
        style="@style/CategoryStyle"
        android:background="@color/category_colors"
        android:onClick="colorsList"
        />

    <TextView
        android:id="@+id/phrases"
        android:text="@string/phrases"
        style="@style/CategoryStyle"
        android:background="@color/category_phrases"
        android:onClick="phrasersList"
        />
</LinearLayout>
